@model IEnumerable<DomingoRoofWorks.Models.Invoice>

<h1>Customer Invoice</h1>

<table class="table">
    <tr>
        <th>
            Job Card No.
        </th>
        <th>
            Customer Details
        </th>
        <th>
            JobType
        </th>
        <th>
            Costs
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Jobs.JobCardId
            </td>
            <td>
                @item.Customer.Name @item.Customer.Surname
            </td>
            <td>
                @item.JobType.JobType1
            </td>
            <td>
                @(String.Format("R {0:0.00}",item.JobType.Rate*item.Jobs.Days))
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Jobs.JobCardId })
            </td>
        </tr>
    }

</table>
