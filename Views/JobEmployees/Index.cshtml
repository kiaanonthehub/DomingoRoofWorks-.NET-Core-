@model IEnumerable<DomingoRoofWorks.Models.JobEmployee>

@{
    ViewData["Title"] = "Index";
}

<h1>Jobs and Employees Page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Job Card No.
            </th>
            <th>
               Employee ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobCard.JobCardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobEmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobEmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobEmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
